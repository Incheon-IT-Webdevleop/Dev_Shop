<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.shop.user.UserMapper">
    
    <!-- 테스트 -->
    <select id="selectOne" resultType="String">
        select current_timestamp from member
    </select>

    <!-- 중복검사 -->
    <select id="countByEmail" parameterType="string" resultType="int">
        select 
            count(memberIdx)
        from 
            member
        where 
            email = #{email}
    </select>

    <!-- 회원 가입 -->
    <insert id="insertUser" parameterType="com.shop.shop.user.UserRequestDTO">
        insert  
            into member(email, password, name, phone, loginType, isActive, role, joinAt)
        values
            (#{email}, #{password}, #{name}, #{phone}, #{provider}, true, 0, CURTIME())
    </insert>

    <!-- 이메일로 유저 찾기 -->
    <select id="findByEmail" parameterType="string" resultType="com.shop.shop.user.UserDTO">
        select
            *
        from
            member
        where
            email = #{email}
    </select>
</mapper>